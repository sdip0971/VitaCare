rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin SDK access (server-side)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read for medical records if needed
    match /medical-records/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}